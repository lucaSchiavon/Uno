@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "~/Views/Shared/_FrontLayout.cshtml";
}

<div class="container">
    <br />
    <!-- inizio form -->

        <div class="row">
            <div class="col-lg-6 mb-6 mx-auto">
                <div class="card h-100">
                    <h4 class="card-header">Forgot password?<br />An email will'be sent to you to reset it.</h4>
                 
                    <div class="card-body">
                        <form id="account" method="post" class="user">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Input.Email"></label>
                                <input asp-for="Input.Email" type="email" class="form-control form-control-user" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Enter Email Address..." />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                                @*<input type="email" class="form-control form-control-user" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Enter Email Address...">*@
                            </div>
                            <button type="submit" class="btn btn-primary  btn-user btn-block">Submit</button>
                            @*<a href="index.html" class="btn btn-primary btn-user btn-block">
                    Login
                </a>*@
                        </form>


                    </div>
                </div>
            </div>
        </div>

    <!-- fine form -->
</div>

  

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
