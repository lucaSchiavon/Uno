@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "Two-factor authentication";
    Layout = "~/Views/Shared/_FlatLayout.cshtml";
}

<div class="row">
    @*<div class="col-lg-6 d-none d-lg-block bg-login-image"></div>*@
    <div class="col-lg-12">
        <div class="p-5">
            <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">TWO FACTOR AUTHENTICATION</h1>
                <h2 class="h5 text-gray-900 mb-4">Your login is protected with an authenticator app.<br />Enter your authenticator code below.</h2>
               

            </div>
            <form id="account" method="post" class="user" asp-route-returnUrl="@Model.ReturnUrl">
                <input asp-for="RememberMe" type="hidden" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group text-center">
                    @*<div class="form-group col-md-6">*@
                        <label asp-for="Input.TwoFactorCode"></label>
                        <input asp-for="Input.TwoFactorCode" class="form-control form-control-user" autocomplete="off" />
                        <span asp-validation-for="Input.TwoFactorCode" class="text-danger"></span>
                    @*</div>*@
                  
                </div>
                    <div class="form-group">
                        <div class="custom-control custom-checkbox small">
                            <input asp-for="Input.RememberMachine" type="checkbox" class="custom-control-input" id="customCheck" />
                            <label asp-for="Input.RememberMachine" class="custom-control-label" for="customCheck">
                                @Html.DisplayNameFor(m => m.Input.RememberMachine)
                            </label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary  btn-user btn-block">Log in</button>
                    <br />
                    <div class="text-center">
                        <h5 class="h5 text-gray-900 mb-4">
                            Don't have access to your authenticator device? You can
                        </h5>
                        <h5 class="h5 text-gray-900 mb-4"> <a id="recovery-code-login" asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl">log in with a recovery code</a>.</h5>

                    </div>

</form>


        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
